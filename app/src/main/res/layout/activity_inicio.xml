<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bazinga"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Facebook.LoginFacebookActivity">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtPassword"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:background="@color/common_action_bar_splitter"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="alex@zombie.com.br"/>

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblResult"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:background="@color/common_action_bar_splitter"
        android:inputType="numberPassword"
        android:text="123456"/>

    <Button
        android:text="ACESSAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAcess"
        android:onClick="Inicio_acessar"
        android:layout_above="@+id/login_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblResult"
        android:layout_above="@+id/btnAcess"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OU SE PREFERIR"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/login_button"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
