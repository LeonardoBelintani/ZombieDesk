<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zombie_desk.zombiedesk.MainActivity">

    <Button
        android:text="CADASTRAR NOVO USUÁRIO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreateUser"
        android:onClick="onClick"
        android:layout_below="@+id/btnAnimation"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="SAIR"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSair"
        android:onClick="onClick"
        android:layout_below="@+id/btnCreateUser"
        />

    <Button
        android:id="@+id/btnListFuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LISTAR FUNCIONARIOS"
        android:onClick="onClick"
        android:layout_below="@+id/btnListCall"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnListCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnListDepartment"
        android:onClick="onClick"
        android:text="LISTAR CHAMADOS" />

    <Button
        android:id="@+id/btnListDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnListRole"
        android:onClick="onClick"
        android:text="LISTAR DEPARTAMENTOS" />

    <Button
        android:id="@+id/btnListRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:text="LISTAR FUNÇÕES" />

    <Button
        android:id="@+id/btnListarUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="LISTAR USUÁRIOS"
        android:layout_below="@+id/btnListFuncio"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btnInternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnListarUsuarios"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Intent interna"/>

    <Button
        android:id="@+id/btnAnimationProperty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnInternal"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="ANIMAÇÃO DAS PROPRIEDADES"/>

    <Button
        android:id="@+id/btnAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ANIMAÇÃO"
        android:layout_below="@+id/btnAnimationProperty"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
